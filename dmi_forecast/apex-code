type: custom:apexcharts-card
header:
  title: DMI Water Level Forecast
  show: true
graph_span: 5d
span:
  start: day
series:
  - entity: sensor.dmi_forecast_water_level
    type: line
    name: Water Level
    unit: cm
    show:
      in_header: false
    data_generator: |
      if (!entity.attributes.forecast) return [];
      return entity.attributes.forecast.map(f => [
        new Date(f.datetime).getTime(),
        f.value
      ]);
yaxis:
  - decimals: 1

