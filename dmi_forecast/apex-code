type: custom:apexcharts-card
header:
  title: DMI Wind Speed Forecast
  show: true
graph_span: 5d
span:
  start: day
series:
  - entity: sensor.dmi_forecast_wind_speed
    type: line
    name: Wind Speed
    unit: m/s
    show:
      in_header: false
    data_generator: |
      return entity.attributes.forecast.map(f => {
        return [new Date(f.datetime).getTime(), f.value];
      });
yaxis:
  - min: 0
    decimals: 1

